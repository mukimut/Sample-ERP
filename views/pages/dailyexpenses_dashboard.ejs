<div class="content-wrapper">
	<section class="invoice">
		<div class="row">
			<div class="col-xs-12">
				<div class="row">
					<div class="box">
						<div class="box-header">
							<h3 class="box-title">Dashboard of Daily Expenses</h3>
						</div>
						<div class="box-body table-responsive no-padding">
							<table class="table table-hover">
								<thead>
									<th>Invoice</th>
									<th>Purpose</th>
									<th>Project</th>
									<th>Type</th>
									<th>Amount</th>
									<th>Action</th>
								</thead>
								<tbody id="cashTable"></tbody>
							</table>
						</div>
					</div>
					<button class="btn btn-flat btn-success" onclick="submit()">Save</button>
				</div>
			</div>
		</div>
	</section>
	<div class="clearfix"></div>
