<!-- <div class="control-sidebar-bg"></div> -->
<script src="/dependencies/jquery.js"></script>
<script src="/js/dropdown.js"></script>
<script src="/js/table.js"></script>
<script>
	let cashData = [];
	
	getExpenses();
	
	function getExpenses() {
		$.get('/api/expense?status=1', (res) => {
			const cashTable = document.getElementById('cashTable');
			cashTable.innerHTML = '';
			res.forEach((element, index) => {
				cashData.push(element);
				let row = cashTable.insertRow();

				addCell(row, element.invoice);
				addCell(row, element.purpose);
				addCell(row, element.project);
				addCell(row, element.type);

				let cell = row.insertCell();
				cell.innerHTML = '<input type="number" id="amount' + index + '" value="' + element.amount + '">';
				cell = row.insertCell();
    		cell.innerHTML = '<i class="fa fa-check fa_chk" onclick="varifyExpense(' + index + ', 3)">Approve</i><i class="fa fa-times fa_cros" onclick="varifyExpense(' + index + ', 4)">Reject</i>';
			});
		});
	}

	function varifyExpense(index, status) {
		const amount = document.getElementById('amount' + index).value;
		$.ajax({
			url: '/api/expense', method: 'PUT', data: {data: {approved: status, amount: amount}, id: cashData[index].id}, success: res => {
				cashData = [];
				getExpenses();
			}
		});
	}
	function deleteEntry(index) {
		addedExpense.splice(index, 1);
		updateTable();
	}

	function updateTable() {
		const table = document.getElementById('table');
		table.innerHTML = '';
		addedExpense.forEach((element, index) => {
			const row = table.insertRow();
			addCell(row, element.purpose);
			addCell(row, element.supplier);
			addCell(row, element.customer);
			addCell(row, element.amount);
			addCell(row, element.project);

			const cell = row.insertCell();
    	cell.innerHTML = '<button onclick=deleteEntry(' + index + ')>Delete</button>'
		});
	}
</script>
