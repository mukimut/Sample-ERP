<script>
	let cashData = [], approveData = [];
	getExpenses();

	function getExpenses() {
		cashData = [], approveData = [];
		$.get('/api/expense?status=1,0', (res) => {
			const cashTable = document.getElementById('cashTable');
			const approveTable = document.getElementById('approveTable');
			let approvedIndex = 0, cashIndex = 0;

			cashTable.innerHTML = '', approveTable.innerHTML = [];
			res.forEach((element) => {
				let row, buttonString;
				if(element.approved === 1) {
					cashData.push(element);
					row = cashTable.insertRow();
					buttonString = '<i class="fa fa-check fa_chk" onclick="varifyExpense(' + cashIndex + ', 3, ' + element.id + ')">Paid</i>';
					cashIndex++;
				}
				else {
					approveData.push(element);
					row = approveTable.insertRow();
					buttonString = '<i class="fa fa-check fa_chk" onclick="varifyExpense(' + approvedIndex + ', 1, ' + element.id + ')">Approve</i><i class="fa fa-times fa_cros" onclick="varifyExpense(' + approvedIndex + ', 2, ' + element.id + ')">Reject</i>';
				}

				addCell(row, element.invoice);
				addCell(row, element.purpose);
				addCell(row, element.project);
				addCell(row, element.type);

				if(!element.approved) {
					let cell = row.insertCell();
					cell.innerHTML = '<input type="number" id="amount' + approvedIndex + '" value="' + element.amount + '">';
					approvedIndex++;
				}
				else addCell(row, element.amount);
				
				cell = row.insertCell();
				cell.innerHTML = buttonString;
			});
		});
	}

	function varifyExpense(index, status, id) {
		const data = {approved: status};
		if(status === 1) data.amount = document.getElementById('amount' + index).value;
		$.ajax({
			url: '/api/expense', method: 'PUT', data: { data: data, id: id }, success: res => {
				cashData = [];
				getExpenses();
			}
		});
	}
	function deleteEntry(index) {
		addedExpense.splice(index, 1);
		updateTable();
	}

	function updateTable() {
		const table = document.getElementById('table');
		table.innerHTML = '';
		addedExpense.forEach((element, index) => {
			const row = table.insertRow();
			addCell(row, element.purpose);
			addCell(row, element.supplier);
			addCell(row, element.customer);
			addCell(row, element.amount);
			addCell(row, element.project);

			const cell = row.insertCell();
			cell.innerHTML = '<button onclick=deleteEntry(' + index + ')>Delete</button>'
		});
	}
</script>
